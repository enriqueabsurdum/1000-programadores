Algoritmo E02
	var <- Falso
	Repetir
		rojo <- 20
		verde <- 30
		amarillo <- 10
		Escribir 'Rojo'
		Mientras rojo>=1 Hacer
			rojo <- rojo-1
		FinMientras
		Escribir 'Verde'
		Mientras verde>=1 Hacer
			verde <- verde-1
		FinMientras
		Escribir 'Amarillo'
		Mientras amarillo>=1 Hacer
			amarillo <- amarillo-1
		FinMientras
	Hasta Que var
FinAlgoritmo

